{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"noImplicitAny": true,
		"target": "esnext",
		"module": "esnext",
		"baseUrl": "./",
		"outDir": "./build",
		"sourceMap": true,
		"paths": {},
		"strict": true,
		"allowJs": true,
		"checkJs": true
	},
	"include": [
		"**/*.ts",
		"src/**/*",
		"typings-custom/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"src/math/libs"
	]
}